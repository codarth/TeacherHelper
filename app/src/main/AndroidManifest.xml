<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crawford.teacherhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:roundIcon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NamePicker"
            android:label="@string/NamePicker">
        </activity>

        <activity android:name=".RandomNumber"
            android:label="@string/RandomNumber">
        </activity>

        <activity android:name=".TeacherTimer"
            android:label="@string/Timer">
        </activity>

        <activity android:name=".TeacherStopWatch"
            android:label="Stop Watch">
        </activity>

    </application>

</manifest>